######################################################
#
#   random: Interesting functions to make your life as admin more fun!
#
######################################################

admin:/rand [$action] [$option1] [$option2] [$] = >>>
#what is the name of this script?
assign(@name, Random)

#dynamic vars, dont edit
assign(@you, player())
assign(@action, $action)
assign(@option1, $option1)
assign(@option2, $option2)
assign(@player, @option1)

assign(@player, player())

#action list help
#this appears on /ch, or when unsupported action variable is passed
proc(_ch_help,
	msg(color(6).' random: Interesting functions to make your life as admin more fun!')
	msg(color(a).'Command usage: <required> [optional]')
	msg(color(a).'/rand <action> [option1] [option2]')
	msg(color(6).'Actions:')
)


switch(@action){

case '':
case null:
	msg(color(red).'['.color(gold).@name.color(red).'] '.color(red).'No action specified.'.color(7).' Use /rand help for more information on this command.')
	msg(color(7).'['.color(gold).@name.color(gold).'] '.color(7).rand(1,100))
	die()

case help:
	_ch_help()
	die()





case bucket:
	assign(@bucketenabled, import('bucket.enabled.'.@player))
	if(@bucketenabled == false || @bucketenabled == '' || @bucketenabled == null,
		export('bucket.enabled.'.@player, true)
	#then check if bind is added
		if(has_bind('bucket.info'), null,
			bind(player_interact, array(id: 'bucket.info'), array(item:325), @bucket,
				if(import('bucket.enabled.'.@bucket[player]) == true,
		     			if(equals(@bucket['action'], 'left_click_block' || 'right_click_block'),
						cancel()
						msg(color(7).'['.color(gold).'Bucket'.color(7).'] '.color(7).'Block ID: '.color(b).@bucket[block].color(3).' ('.data_name(@bucket[block]).')'.color(7).' (@'.color(8).@bucket[location][x].','.@bucket[location][y].','.@bucket[location][z].', facing: '.@bucket[facing].color(7).')')
					)
				)
			)
		)
		die(color(7).'['.color(gold).@name.color(7).'] '.color(6).'Enabled!'.color(7).' Left-click a block using a bucket to get information about the block. Use "/rand bucket" again to disable bucket info.')
	,
		export('bucket.enabled.'.@player, false)
		die(color(7).'['.color(gold).@name.color(7).'] '.color(7).'Bucket for '.@player.color(a).' disabled.')
	)



case code:
case codegen:
	assign(@code, _codegen(@option1, @option2, $))
	msg(color(7).'['.color(gold).@name.color(7).'] '.color(7).'A random generated code:')
	msg(@code)
	die()



case sheep:
	assign(@sheepenabled, import('sheep.spawner.enabled.'.@player))
	if(@sheepenabled == false || @sheepenabled == '' || @sheepenabled == null,
		export('sheep.spawner.enabled.'.@player, true)
	#then check if bind is added
		if(has_bind('sheep.spawner'), null,
			bind(player_interact, array(id: 'sheep.spawner'), null, @strike,
				if(import('sheep.spawner.enabled.'.@strike[player]) == true,
		     			if(equals(@strike['action'], 'left_click_air'),
						cancel()
						assign(@sheep, array('sheep:black','sheep:red','sheep:green','sheep:brown','sheep:blue','sheep:purple','sheep:cyan','sheep:silver','sheep:gray','sheep:pink','sheep:lime','sheep:yellow','sheep:light_blue','sheep:magenta','sheep:orange','sheep:white')[rand(16)])
						assign(@here, pcursor(@strike[player])) 
						assign(@here[1], 3 + @here[1])
						spawn_mob(@sheep, 1, @here)
						assign(@sheepcolor, reg_split(':', @sheep)[1])
						msg(color(7).'['.color(gold).'Sheep'.color(7).'] '.color(7).'Spawned a new sheep with a color of: '.color(@sheepcolor).@sheepcolor.color(8).'. ( You were looking at '.color(8).@here[0].','.@here[1].','.@here[2].color(8).')')
					)
				)
			)
		)
		die(color(7).'['.color(gold).@name.color(7).'] '.color(6).'Enabled!'.color(7).'Sheep enabled: Left-click to spawn sheep where you point. Use "/rand sheep" to disable this.')
	,
		export('sheep.spawner.enabled.'.@player, false)
		die(color(7).'['.color(gold).@name.color(7).'] '.color(7).'Sheep for '.@player.color(a).' disabled.')
	)
}
msg(color(red).'['.color(gold).@name.color(red).'] '.color(red).'Oops! That action was not recognized!')

