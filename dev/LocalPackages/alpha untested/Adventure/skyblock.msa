#skyblock:
world:/skyblock [$var1] [$player] = >>>
assign(@var1, $var1)
assign(@player, $player)

proc(_skyblock_rules,
        msg(
            color(6).'Skyblock rules:
            'color(c).'Do NOT purposely jump off the island to regenerate your health.
            'color(c).'Do NOT make a bridge to the mainland.
            'color(c).'NO Mods, Hacks, Flying, etc.
            'color(a).'Play on at least easy difficulty.
