#TooManyItems: Creative mode setting
everyone:/gamemode [$] = >>>
#name of script
assign(@name, 'gameMode')
assign(@you, player())

if(has_permission(@you, 'commandhelper.alias.shiftmode'),
	call_alias(/mode),
	die(color(c).'['.color(6).@name.color(c).'] '.color(f).'You don\'t have permission to change your gamemode.')
)
