#skyblock:
world:/skyblock [$msg] [$player] = >>>

proc _skyblock_rules(){
    msg(
        color(6).'Skyblock rules:\n'.
        color('r').'- '.color('c').'Do NOT purposely jump off the island to regenerate your health.\n'.
        color('r').'- '.color('c').'Do NOT make a bridge to the mainland.\n'.
        color('r').'- '.color('c').'NO Mods, Hacks, Flying, etc.\n'.
        color('r').'- '.color('a').'Play on at least easy difficulty.\n'.
        color('r').'- '.color('a').'Post pictures of your achievements and progress!\n'.
        color('r').'- '.color('a').'Have FUN!'
    )
    die()
}

